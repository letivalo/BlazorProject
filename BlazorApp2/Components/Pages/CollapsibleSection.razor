@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
    private bool isCollapsed = true;

    private void ToggleCollapse()
    {
        isCollapsed = !isCollapsed;
    }
}

<div class="collapsibleSection" style="position:relative;top:-2.5em;">
    <button @onclick="ToggleCollapse" class="collapsible">@Title</button>
    <div class="content" style="display:@(isCollapsed ? "none" : "block")">
        @ChildContent
    </div>
</div>

<style>
    .collapsible {
        background-color:rgba(0,0,0,0.3);
        color: white;
        border-radius: 50px;
        cursor: pointer;
        padding: 10px;
        padding-left:2rem;
        margin-left:10rem;
        width: 57vw;
        border: none;
        text-align: left;
        outline: none;
        font-size: 15px;
        margin-bottom:1rem;
    }

    .active, .collapsible:hover {
        background-color: #ccc;
    }
</style>

